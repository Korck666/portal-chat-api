    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/app",
            "python": "${command:python.interpreterPath}",
            "pythonArgs": [
                "-B"
            ],
            "args": [
                "main:app",
                "--reload",
                "--port",
                "8000",
                "--host",
                "0.0.0.0",
                "--log-level",
                "debug",
                "--reload-dir",
                "${workspaceFolder}/app"
            ],
            "jinja": true,
            "redirectOutput": true,
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/app"
            },
            "console": "integratedTerminal"
        }
    ]
}